		String a ="java welcome to java ";
		
		String[] split = a.split(" ");
		
		Map<String, Integer> mp= new HashMap<String, Integer>();
		
		for (String str : split) {
			
		if (mp.containsKey(str)) {
			Integer inte = mp.get(str);
			mp.put(str, inte+1);
		}
		else {
			mp.put(str, 1);
		}
		System.out.println(mp);
		
