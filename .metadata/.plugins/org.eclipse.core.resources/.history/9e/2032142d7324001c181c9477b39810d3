		String a= "roadblock java ";
				
		
		
		Map<String, Integer> mp = new HashMap<String, Integer>();
		
		String[] split = a.split(" ");
		
		for (String c : split) {
			
			if (mp.containsKey(c)) {
				Integer inte = mp.get(c);
				mp.put(c, inte+1);
			}
			else {
				mp.put(c, 1);
			}
		}
		System.out.println(mp);
		
